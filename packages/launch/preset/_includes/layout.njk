<!doctype html>
{% block htmlTag %}
<html lang="{{site.lang}}" dir="{{site.dir}}">
{% endblock htmlTag %}

  <head>
    {% block headContent %}
      {% include 'partials/head-content.njk' %}
    {% endblock %}
  </head>

  {% block bodyTag %}
  <body layout="{{layoutName}}">
  {% endblock bodyTag %}

    {% block header %}
      {% include 'partials/header.njk' %}
    {% endblock header%}

    <div id="content-wrapper">
      <div class="content-area">
        {% block sidebar %}
          {% include 'partials/sidebar.njk' %}
        {% endblock sidebar %}
        {% block content %}
          {% include 'partials/content.njk' %}
        {% endblock content %}
      </div>
    </div>

    {% block footer %}
      {% include 'partials/footer.njk' %}
    {% endblock footer %}

  {% block bodyTagEnd %}
  </body>
  {% endblock bodyTagEnd %}
{% block htmlTagEnd %}
</html>
{% endblock htmlTagEnd %}
